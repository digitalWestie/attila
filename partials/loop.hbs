<div class="extra-pagination">
  {{pagination}}
</div>

<div class="posts-grid">
{{#foreach posts visibility="all"}}

<article class="{{post_class}}">
  <div class="inner">
    <div class="box post-box">
      {{#if feature_image}}
        <a class="post-image-link" href="{{url}}">
            <img class="post-image"
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                sizes="(max-width: 1000px) 400px, 800px"
                src="{{img_url feature_image size="m"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                loading="lazy"
            />

            {{#unless access}}
            {{^has visibility="public"}}
                <div class="post-access">
                    {{#has visibility="members"}}
                        Members only
                    {{else}}
                        Paid-members only
                    {{/has}}
                </div>
            {{/has}}
            {{/unless}}
        </a>
      {{/if}}

      <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
      <span class="post-meta">
        {{t "By"}}
        {{authors separator=", "}}
        {{#primary_tag}}{{t "in"}} <a class="post-meta-tag" href="{{url}}">{{name}}</a>{{/primary_tag}}
        {{t "on"}}
        <time datetime="{{date format='DD-MM-YYYY'}}">{{date format="DD MMM YYYY"}}</time>
      </span>
      <p class="post-excerpt">{{excerpt}}&hellip;</p>
    </div>
  </div>
</article>

{{/foreach}}
</div>

{{pagination}}
